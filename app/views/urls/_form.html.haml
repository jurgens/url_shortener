= form_for @url do |f|
  - if @url.errors.any?
    #error_explanation
      %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
      %ul
        - @url.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url_long
    = f.text_field :url_long
  .field
    = f.label :private
    = f.check_box :private, :value => false
  - if @url.private? 
    .field
      = f.label :password_digest
      = f.text_field :password_digest
  .actions
    = f.submit 'Save'
